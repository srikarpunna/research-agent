# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your API keys
# DO NOT commit secrets.toml to git!

# For local development, you can use your .env file
# For Streamlit Cloud deployment, add these in the app settings

# Google Gemini API Key
GOOGLE_API_KEY = "your-google-api-key-here"

# Tavily API Key
TAVILY_API_KEY = "your-tavily-api-key-here"

# FireCrawl API Key
FIRECRAWL_API_KEY = "your-firecrawl-api-key-here"

# LangSmith API Key (Optional)
LANGSMITH_API_KEY = "your-langsmith-api-key-here"
LANGSMITH_PROJECT = "research-agent-production"
LANGSMITH_TRACING = "true"

# Model Configuration
LLM_MODEL = "gemini-2.5-pro"
LLM_TEMPERATURE = "0.7"
MAX_TOKENS = "4000"

# Research Settings
MAX_SEARCH_RESULTS = "5"
MAX_SCRAPE_PAGES = "3"
RESEARCH_DEPTH = "comprehensive"

# Output Settings
LINKEDIN_MAX_CHARS = "3000"
INCLUDE_HASHTAGS = "true"
NUM_HASHTAGS = "5"
